{
    "version": "1.0.0",
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2015",
        "strict": true,
        "outDir": "./target",
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "lib": [
            "es2015"
        ],
        "pretty": true,
        "sourceMap": true,
        "declaration": true,
        "removeComments": true,
        "incremental": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/*.ts"
    ]
}